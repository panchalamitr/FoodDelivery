<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_background"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/viewPager2">


    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/vpCartType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        app:stl_clickable="true"
        app:stl_customTabTextLayoutId="@layout/custom_tab"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@android:color/black"
        app:stl_defaultTabTextHorizontalPadding="@dimen/_16sdp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_defaultTabTextSize="@dimen/_12sdp"
        app:stl_distributeEvenly="false"
        app:stl_dividerColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_drawDecorationAfterTab="false"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/transparent"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="0dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorWithoutPadding="false"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_titleOffset="@dimen/_24sdp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="0dp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpCartList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vpCartType" />

    <com.andremion.counterfab.CounterFab
        android:id="@+id/fabCreditCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_menu_credit_card"
        app:badgeBackgroundColor="@android:color/holo_green_light"
        app:badgeTextColor="@android:color/white"
        app:useCompatPadding="true" />

</RelativeLayout>

